<form class="card col-4 border-dark text-center signUp-form">
  <div class="mb-3">
    <label for="username-signUp" class="form-label">Enter a Username:</label>
    <input type="text" class="form-control" id="username-signUp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="email-signUp" class="form-label">Email address:</label>
    <input type="email" class="form-control" id="email-signUp" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="password-signUp" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-signUp">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <div>
    <a href="/login">Already Signed Up? Click Here to Log On</a>
  </div>
</form>

<script src="/javascript/signup.js"></script>